{
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "allowImportExportEverywhere": false
    },
    "env": {
        "browser": true,
        "amd": true,
        "es6": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "rules" : {
        "comma-dangle": [1, {
            "arrays": "always-multiline",
            "objects": "always-multiline",
            "imports": "never",
            "exports": "never",
            "functions": "never"
        }]
    }
}
